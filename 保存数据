void saveData()
{
    FILE* fp = fopen("studentData.txt", "a"); // "a" 追加，改成 "w" 可覆盖写入
    if (fp == NULL)
    {
        printf("无法打开文件进行保存\n");
        return;
    }

    // 将 grades 数组以文本形式写入文件：学号 课程 成绩
    for (int i = 0; i < gradeCount; ++i)
    {
        // 每条记录一行，便于人工查看和读取
        fprintf(fp, "%d %s %.2f\n", grades[i].studentId, grades[i].course, grades[i].score);
    }

    fclose(fp);
    printf("已将 %d 条成绩保存到 studentData.txt\n", gradeCount);
}
