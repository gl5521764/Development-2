void FixStudent() 
{
    char id;
    int index = -1;
    printf("请输入要修改的学生学号：");
    scanf("%hhd", &id);

    for (int i = 0; i < studentCount; i++) 
   {
        if (students[i].id == id) 
        {
            index = i;
            break;
        }
    }

    if (index == -1) 
   {
        printf("未找到该学生，修改失败！\n");
        return;
    }

    printf("当前姓名：%s\n", students[index].name);
    printf("请输入新姓名：");
    scanf("%s", students[index].name);
    printf("学生信息修改成功！\n");
    saveData();
}
